{
  "name": "package-scry",
  "version": "1.0.0",
  "description": ".",
  "scripts": {
    "build": "tsc",
    "build-tw": "npx tailwindcss-cli@latest build -c ./tailwind.config.js -o ./src/tailwind.css",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "lint-fix": "eslint --fix -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint-fix"
    ]
  },
  "repository": "https://github.com/Package-Scry/app",
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "kristofszollosi",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "electron": "^11.1.1",
    "electron-reloader": "^1.1.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^3.9.5"
  }
}
