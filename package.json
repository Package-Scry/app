{
  "name": "package-scry",
  "version": "1.0.0",
  "description": ".",
  "scripts": {
    "build:dev": "webpack serve --node-env development --config ./webpack.dev.js",
    "dev": "electron -r dotenv/config ./dist/main.js",
    "build": "webpack --node-env production --config ./webpack.prod.js",
    "start": "npm run build && electron -r dotenv/config ./dist/main.js",
    "format": "prettier --write ./src/**/*.{js,svelte,html,ts}",
    "lint": "eslint './src/**/*.{js,ts,svelte}'",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder -w"
  },
  "main": "./dist/main.js",
  "build": {
    "appId": "com.package-scry.package-scry",
    "protocols": {
      "name": "Pacakge Scry",
      "schemes": [
        "pacakge-scry"
      ]
    },
    "productName": "Package Scry",
    "directories": {
      "app": ".",
      "output": "out",
      "buildResources": "src/build"
    },
    "files": [
      "package.json",
      "src/css",
      "src/index.html",
      "dist/**/*",
      "node_modules"
    ],
    "win": {
      "target": "appx"
    },
    "appx": {
      "applicationId": "PackageScry.PackageScry",
      "identityName": "7240PackageScry.PackageScry",
      "publisher": "CN=7CFC0598-38E9-4407-9742-FBBA6FA5BD6A",
      "publisherDisplayName": "Package Scry"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "extendInfo": "src/build/Info.plist",
      "entitlements": "src/build/entitlements.mac.plist",
      "entitlementsInherit": "src/build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "scripts/notarize.js",
    "publish": {
      "provider": "spaces",
      "name": "package-scry",
      "region": "sfo3",
      "path": "/releases"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "npm run format",
      "npm run lint:fix"
    ]
  },
  "repository": "https://github.com/Package-Scry/app",
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "kristofszollosi",
  "devDependencies": {
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "autoprefixer": "^10.2.5",
    "css-loader": "^6.7.1",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.6.0",
    "postcss": "^8.3.5",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.7.0",
    "style-loader": "^3.3.1",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^2.1.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-updater": "^5.2.1",
    "fix-path": "^3.0.0",
    "socket.io-client": "^3.1.1",
    "svelte": "^3.49.0",
    "svelte-loader": "^3.1.3"
  }
}
