{
  "name": "package-scry",
  "version": "1.0.0",
  "description": ".",
  "scripts": {
    "build": "tsc",
    "build-tw": "npx tailwindcss-cli@latest build -c ./tailwind.config.js -o ./src/css/tailwind.css",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "lint-fix": "eslint --fix -c .eslintrc --ext .ts ./src",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run build && set NODE_ENV=production && electron -r dotenv/config ./dist/main.js",
    "dev": "npm run build && set NODE_ENV=development && electron -r dotenv/config ./dist/main.js",
    "dist": "npm run build && electron-builder -w"
  },
  "main": "./dist/main.js",
  "build": {
    "appId": "com.package-scry.package-scry",
    "productName": "Package Scry",
    "directories": {
      "app": ".",
      "output": "out",
      "buildResources": "src/build"
    },
    "files": [
      "package.json",
      "src/css",
      "src/index.html",
      "dist/**/*",
      "node_modules"
    ],
    "win": {
      "target": "appx"
    },
    "appx": {
      "applicationId": "PackageScry.PackageScry",
      "identityName": "7240PackageScry.PackageScry",
      "publisher": "CN=7CFC0598-38E9-4407-9742-FBBA6FA5BD6A",
      "publisherDisplayName": "Package Scry"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint-fix"
    ]
  },
  "repository": "https://github.com/Package-Scry/app",
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "kristofszollosi",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "electron-reloader": "^1.2.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-updater": "^4.3.5",
    "socket.io-client": "^3.1.1"
  }
}
