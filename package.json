{
  "name": "package-scry",
  "version": "1.0.1",
  "description": ".",
  "scripts": {
    "build": "webpack --node-env production --config ./webpack.prod.js",
    "build:dev": "webpack serve --node-env development --config ./webpack.dev.js",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "lint-fix": "eslint --fix -c .eslintrc --ext .ts ./src",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run build && electron -r dotenv/config ./dist/main.js",
    "dev": "electron -r dotenv/config ./dist/main.js",
    "dist": "npm run build && electron-builder -w --publish always"
  },
  "main": "./dist/main.js",
  "build": {
    "appId": "com.package-scry.package-scry",
    "protocols": {
      "name": "Pacakge Scry",
      "schemes": ["pacakge-scry"]
    },
    "productName": "Package Scry",
    "directories": {
      "app": ".",
      "output": "out",
      "buildResources": "src/build"
    },
    "files": [
      "package.json",
      "src/css",
      "src/index.html",
      "dist/**/*",
      "node_modules"
    ],
    "win": {
      "target": "appx"
    },
    "appx": {
      "applicationId": "PackageScry.PackageScry",
      "identityName": "7240PackageScry.PackageScry",
      "publisher": "CN=7CFC0598-38E9-4407-9742-FBBA6FA5BD6A",
      "publisherDisplayName": "Package Scry"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "scripts/notarize.js",
    "publish": {
      "provider": "spaces",
      "name": "package-scry",
      "region": "sfo3",
      "path": "/releases"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint-fix"
    ]
  },
  "repository": "https://github.com/Package-Scry/app",
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "kristofszollosi",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "autoprefixer": "^10.2.5",
    "css-loader": "^5.2.1",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.9",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "tailwindcss": "^2.1.1",
    "ts-loader": "^8.1.0",
    "typescript": "^3.9.5",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-updater": "^4.3.5",
    "socket.io-client": "^3.1.1"
  }
}
